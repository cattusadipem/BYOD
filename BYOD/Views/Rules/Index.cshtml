@model IEnumerable<BYOD.Models.RULES>
@{
    ViewBag.Title = "Rules";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<script>
    $(document).on('change', 'input[name="check_all"]', function () {
        $('.checkbox').prop("checked", this.checked);
    });
    $(document).ready(function ($) {
        $('#my_table').dynatable({
            table: {
                defaultColumnIdStyle: 'trimDash'
            },
            features: {
                paginate: true,
                search: true,
                recordCount: false,
                perPageSelect: false
            }
        });
    });
</script>
<div class="container-fluid">
    <div class="page-header">
        <div>
            <div class="widget">
                <h3 class="section-title first-title">Rules</h3>
                <div class="widget-content-white glossed">
                    <div class="padded">
                        <form class="form-validate" id="test" novalidate="novalidate">
                            <div class="a_dv">
                                <div id="p_element">
                                    <div class="r_element">
                                        <div>
                                            <label>Rule Name</label>
                                            <input style="width: 200px;" type="text" placeholder="Name">
                                        </div>
                                        <div style="display:block; width: 90%;">
                                        <div style="clear:left;"></div>
                                            <table id="my_table" class="table table-striped table-bordered table-hover datatable">
                                                <thead>
                                                    <tr>
                                                        <th>List Rules</th>
                                                    </tr>
                                                </thead>
                                                @foreach (var item in Model)
                                                {
                                                <tbody>
                                                    
                                                    <tr>
                                                        <td>@Html.DisplayFor(modelItem => item.name)  @Html.HiddenFor(modelItem => item.rules_id) </td>
                                                       
                                                    </tr>
                                                </tbody>
                                                }
                                            </table>
                                        </div>
                                    </div>
                                    <div class="r_element">
                                        <div>
                                            <div class="checkbox">
                                                <label>
                                                    <span><i>Check All</i></span>
                                                    <input type="checkbox" name="check_all">
                                                </label>
                                            </div>
                                        </div>
                                        <div>
                                            <h4>General </h4>
                                            <div class="checkbox">
                                                <label>
                                                    <span>Disable Copy & Paste</span><input class="checkbox" name="checked" type="checkbox">
                                                </label>
                                            </div>
                                        </div>
                                        <div>
                                            <h4>Email: </h4>
                                            <div class="checkbox">
                                                <label>
                                                    <span>Allow to access email</span><input class="checkbox" name="checked" type="checkbox">
                                                </label>
                                            </div>
                                        </div>
                                        <div>
                                            <h4>Restriction: </h4>
                                            <div class="checkbox">
                                                <label>
                                                    <span>Allow Camera</span><input class="checkbox" name="checked" type="checkbox">
                                                </label>
                                            </div>
                                            <div class="checkbox">
                                                <label>
                                                    <span>Allow Microphone</span><input class="checkbox" name="checked" type="checkbox">
                                                </label>
                                            </div>
                                            @*<div class="checkbox">
											<label>
												<span>Allow Factory Reset</span><input  class="checkbox" name="checked" type="checkbox">
											</label>
										</div>*@
                                            <div class="checkbox">
                                                <label>
                                                    <span>Allow Airplane Mode</span><input class="checkbox" name="checked" type="checkbox">
                                                </label>
                                            </div>
                                            <div class="checkbox">
                                                <label>
                                                    <span>Allow Screen Capture</span><input class="checkbox" name="checked" type="checkbox">
                                                </label>
                                            </div>
                                            <div class="checkbox">
                                                <label>
                                                    <span>Allow Clipboard</span><input class="checkbox" name="checked" type="checkbox">
                                                </label>
                                            </div>
                                            <div class="checkbox">
                                                <label>
                                                    <span>Allow Home Key</span><input class="checkbox" name="checked" type="checkbox">
                                                </label>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="r_element">
                                        <div>
                                            <div class="checkbox">
                                                <label>
                                                    <span><i>&nbsp;</i></span>
                                                </label>
                                            </div>
                                        </div>
                                        <div>
                                            <h4>Download Type </h4>
                                            <div class="checkbox">
                                                <label>
                                                    <select style="width: 300px;">
                                                        <option>Manually by user</option>
                                                        <option>Automatically push</option>
                                                    </select>
                                                </label>
                                            </div>
                                        </div>
                                        <div>
                                            <h4>Application </h4>
                                            <div class="checkbox">
                                                <label>
                                                    <span>Application A</span><input class="checkbox" name="checked" type="checkbox">
                                                </label>
                                            </div>
                                            <div class="checkbox">
                                                <label>
                                                    <span>Application B</span><input class="checkbox" name="checked" type="checkbox">
                                                </label>
                                            </div>
                                            <div class="checkbox">
                                                <label>
                                                    <span>Application C</span><input class="checkbox" name="checked" type="checkbox">
                                                </label>
                                            </div>

                                            <button class="btn btn-primary" data-toggle="modal" data-target=".bs-example-modal-lg">Manage Application</button>
                                        </div>
                                        <div>
                                            <h4>Shared Folder </h4>
                                            <div class="checkbox">
                                                <label>
                                                    <span>Allow Access</span><input class="checkbox" name="checked" type="checkbox">
                                                </label>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div style="clear: left;"></div>
                            </div>
                            <div>&nbsp;</div>
                            <div class="submit">
                                <input type="submit" value="Save" class="btn btn-primary">
                                <input type="submit" value="Refresh" class="btn btn-default">
                                <input type="submit" value="Delete" class="btn btn-danger">
                            </div>
                            <div class="modal fade bs-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display: none;">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                                            <h4 class="modal-title" id="myModalLabel">Manage Application</h4>
                                        </div>
                                        <div class="modal-body">
                                            <table class="my_table table table-striped table-bordered table-hover datatable">
                                                <thead>
                                                    <tr>
                                                        <th>Application</th>
                                                        <th></th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <tr>
                                                        <td>Application A</td>
                                                        <td>
                                                            <div class="btn-group">
                                                                <a class='btn btn-default btn-small'><i class="icon-book"></i>Edit</a>
                                                                <a style="height: 20px;" class="btn btn-default btn-small dropdown-toggle" data-toggle="dropdown" href=""><span class="caret"></span></a>
                                                                <ul class="dropdown-menu">
                                                                    <li><a href="" onclick="return checkMe()"><i class="icon-trash"></i>Delete</a></li>
                                                                </ul>
                                                            </div>
                                                        </td>
                                                    </tr>
                                                    <tr>
                                                        <td>Application B</td>
                                                        <td>
                                                            <div class="btn-group">
                                                                <a class='btn btn-default btn-small'><i class="icon-book"></i>Edit</a>
                                                                <a style="height: 20px;" class="btn btn-default btn-small dropdown-toggle" data-toggle="dropdown" href=""><span class="caret"></span></a>
                                                                <ul class="dropdown-menu">
                                                                    <li><a href="" onclick="return checkMe()"><i class="icon-trash"></i>Delete</a></li>
                                                                </ul>
                                                            </div>
                                                        </td>
                                                    </tr>
                                                    <tr>
                                                        <td>Application C</td>
                                                        <td>
                                                            <div class="btn-group">
                                                                <a class='btn btn-default btn-small'><i class="icon-book"></i>Edit</a>
                                                                <a style="height: 20px;" class="btn btn-default btn-small dropdown-toggle" data-toggle="dropdown" href=""><span class="caret"></span></a>
                                                                <ul class="dropdown-menu">
                                                                    <li><a href="" onclick="return checkMe()"><i class="icon-trash"></i>Delete</a></li>
                                                                </ul>
                                                            </div>
                                                        </td>
                                                    </tr>
                                                    <tr>
                                                        <td>
                                                            <input style="width: 200px;" type="text" placeholder="Name"></td>
                                                        <td>
                                                            <div class="btn-group">
                                                                <a class='btn btn-default btn-small'><i class="icon-book"></i>Add</a>
                                                            </div>
                                                        </td>
                                                    </tr>
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
@{
    ViewBag.Title = "Rules";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

