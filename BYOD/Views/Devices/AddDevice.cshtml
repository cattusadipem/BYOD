@*@model BYOD.ViewModels.DeviceViewModel*@

<link href="~/Content/themes/base/minified/jquery-ui.min.css" rel="stylesheet" />
<script src="~/Scripts/jquery-1.6.4.js"></script>
<script src="~/Scripts/jquery-ui-1.10.4.min.js"></script>

@{
    ViewBag.Title = "Devices";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<script type="text/javascript">

    $(function () {
        $("#txtUsername").autocomplete({
            source: '@Url.Action("GetUsers")'
        });
    });

</script>

<div id="left">
    <div style="height: 80px"></div>
    <div class="subnav">
        <ul class="subnav-menu">
            <li>
                <a href="@Url.Content("~/Devices/")">Back</a>
            </li>
            <div style="height: 20px"></div>
        </ul>
    </div>
</div>
<div id="main">
    <div class="container-fluid">
        <div class="page-header">
            <div>

                <div class="widget">
                    <h3 class="section-title first-title"><i class="icon-table"></i>Add Device</h3>
                    <div class="widget-content-white glossed">
                        <div class="padded">
                            @using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl, @class = "form-validate", id = "test" }))
                            {
                                @Html.AntiForgeryToken();
                                @Html.ValidationSummary(true);
                                <div class="a_dv1">
                                    <div>
                                        <span>User: </span>
                                        @Html.TextBox("username", null, new { id = "txtUsername", placeholder = "Username", style = "width: 286px;" })

                                    </div>
                                    <div>
                                        <span>Rule: </span>
                                        @*@Html.DropDownListFor(x => x.selectedId, Model.rules_list, "---Select Rule---")*@

                                    </div>
                                    <div>
                                        <span>Description: </span>
                                        @Html.TextArea("description", null, 5, 1, new { style = "width: 286px;" })

                                    </div>
                                </div>
                                <div class="submit">
                                    <input type="submit" value="Save" class="btn btn-primary">
                                </div>
                                <div>&nbsp;</div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>