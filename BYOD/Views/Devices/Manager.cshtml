@model BYOD.Models.DEVICES

@{
    ViewBag.Title = "Devices";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}
<div id="left">
    <div style="height: 80px"></div>
    <div style="height: 200px">
        <img src="" style="height: 180px" />
        <!-- (Name)
				(root) -->
    </div>
    <div class="subnav">
        <ul class="subnav-menu">
            <li>
                <a href="@Url.Content("~/Devices/SendMessage")">Send Message</a>
            </li>
            <div style="height: 20px"></div>
            <li>
                <a href="" data-toggle="modal" data-target="#lock_dev">Lock Device</a>
                <div class="modal fade" id="lock_dev" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                                <h4 class="modal-title" id="myModalLabel">Lock device</h4>
                            </div>
                            <div class="modal-body">
                                Do you want to lock this device?
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-warning" data-dismiss="modal">Yes</button>
                                <button type="button" class="btn btn-primary">Cancle</button>
                            </div>
                        </div>
                    </div>
                </div>
            </li>
            <div style="height: 20px"></div>
            <li>
                <a href="" data-toggle="modal" data-target="#wipe_dev">Device Wipe</a>
                <div class="modal fade" id="wipe_dev" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                                <h4 class="modal-title" id="myModalLabel">Wipe device</h4>
                            </div>
                            <div class="modal-body">
                                Do you want to wipe this device?
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-warning" data-dismiss="modal">Yes</button>
                                <button type="button" class="btn btn-primary">Cancle</button>
                            </div>
                        </div>
                    </div>
                </div>
            </li>
            <div style="height: 20px"></div>
            <li>
                <a href="@Url.Content("~/Devices/FindDevice")">Find Device</a>
            </li>
            <div style="height: 20px"></div>
            <li>
                <a href="@Url.Content("~/Devices/TrackDevice")">Track Device</a>
            </li>
        </ul>
    </div>
</div>
<div id="main">
    <div class="container-fluid">
        <div class="page-header">
            <div>

                <div class="widget">
                    <h3 class="section-title first-title"><i class="icon-table"></i>Main info</h3>
                    <div class="widget-content-white glossed">
                        <div class="padded">
                            <div class="rm_info">
                                <label class="rm_title">Username</label>
                                <label class="rm_title">Device Model</label>
                                <label class="rm_element">@Html.DisplayFor(x => x.USERS.username)</label>
                                <label class="rm_element">@Html.DisplayFor(x => x.model)</label>
                                <label class="rm_title">Phone Number</label>
                                <label class="rm_title">IMEI</label>
                                <label class="rm_element">@Html.DisplayFor(x => x.phone_number)</label>
                                <label class="rm_element">@Html.DisplayFor(x => x.imei)</label>
                                <label class="rm_title">Platform</label>
                                <label class="rm_title">Description</label>
                                <label class="rm_element">@Html.DisplayFor(x => x.platform)</label>
                                <label class="rm_element">@Html.DisplayFor(x => x.description)</label>
                            </div>
                            <div style="clear: left;"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>